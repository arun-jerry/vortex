    <div class="mb-40">
      <p class="label-name mb-0">Feature key for</p>
      <span class="value-name">Segment</span>
      <div class="mt-20">
        {{input class="value-name pa-10 border border-radius pointer text--medium" value="" placeholder="Eg: 'request_demo'"}}
      </div>
    </div>

    {{#if showSegments}}
      <span class="label-name">New rules for</span><br>
      <span class="value-name">Customer Segment</span>
      <p class="mt-20">Customers who match:</p>
      {{#each conditions as |condition|}}
        <div class="border border-radius pa-40 segment-container">
          <div class="element-inline">
            {{component condition.componentName}}
          </div>
          <div class="element-inline">
            {{component condition.selectedPair.componentName}}
